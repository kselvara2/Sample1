    <alerts>
        <fullName>SendBirthdayGreeeting</fullName>
        <description>SendBirthdayGreeeting</description>
        <protected>false</protected>
        <recipients>
            <field>Dalmia_Student_Email__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <recipient>kselvara2@gmail.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/SalesNewCustomerEmail</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Country_Field</fullName>
        <field>Dalmia_Country__c</field>
        <literalValue>USA</literalValue>
        <name>Update Country Field</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Rejection_Status</fullName>
        <field>Leave_Status__c</field>
        <literalValue>Rejected</literalValue>
