    <rules>
        <fullName>Update Country</fullName>
        <actions>
            <name>Country_Type_Email_Alert</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Update_Country_Field</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>DataToGoogle</name>
            <type>OutboundMessage</type>
        </actions>
        <active>false</active>
        <formula>TEXT($User.CountryCode) == &apos;US&apos;</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>SendBirthdayGreeeting</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>DALMIA_Student__c.Dalmia_Date_Of_Birth__c</offsetFromField>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
